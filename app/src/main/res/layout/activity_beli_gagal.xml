<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_search_ikan"
            android:layout_width="414dp"
            android:layout_height="44dp"
            android:background="#0099FF"
            android:gravity="center"
            android:hint="Pembelian Gagal"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVPenjelasan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="148dp"
            android:background="@drawable/search_input_layout"
            android:gravity="left"
            android:hint="Pembelian gagal, coba lakukan hal di bawah ini:
                          ► Cek stok barang, pastikan kamu tidak membeli \u00A0\u00A0\u00A0barang melebihi stok yang tersedia \n► Jika stok barang kosong mohon tunggu kami \u00A0\u00A0\u00A0melakukan restock \n► JIka stok barang tidak kosong dan pembelian \u00A0\u00A0\u00A0tidak melebihi stok, coba lakukan pembelian ulang \u00A0\u00A0\u00A0dikarenakan terdapat kesalahan sistem"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.274"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_search_ikan" />

        <TextView
            android:id="@+id/TVCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:background="@drawable/search_input_layout"
            android:gravity="left"
            android:hint="asd"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVPenjelasan" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/BtnCofirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:text="Konfirmasi"
        app:elevation="0dp" />

</RelativeLayout>